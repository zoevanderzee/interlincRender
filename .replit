
run = "bash ./run.sh"
hidden = [".build", ".config"]

[nix]
channel = "stable-23_05"
packages = ["nodejs_20"]

[deployment]
build = ["sh", "-c", "./build.sh"]
run = ["sh", "-c", "./start.sh"]

[env]
NODE_ENV = "production"

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Dev"
author = 40887157
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = ". /nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "nix-shell -p nodejs_20 --run \"npm install && npm run dev\""
